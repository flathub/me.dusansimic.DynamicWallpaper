{
    "app-id": "me.dusansimic.DynamicWallpaper",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "command": "me.dusansimic.DynamicWallpaper",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-data/backgrounds:create",
        "--filesystem=xdg-data/gnome-background-properties:create"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.4.0",
                    "commit": "75a6d95988736ec0471d22ceb07579c0cedac2ad"
                }
            ]
        },
        {
            "name": "dynamic-wallpaper",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/dusansimic/dynamic-wallpaper",
                    "tag": "0.1.0",
                    "commit": "c9e2e1dcdacf7430a1d450849d2d8eb7daf8804d",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$",
                        "version-scheme": "semantic"
                    }
                }
            ]
        }
    ]
}
