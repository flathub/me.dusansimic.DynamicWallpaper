{
    "app-id" : "me.dusansimic.DynamicWallpaper",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command" : "me.dusansimic.DynamicWallpaper",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-data/backgrounds:create",
        "--filesystem=xdg-data/gnome-background-properties:create"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "dynamic-wallpaper",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/dusansimic/dynamic-wallpaper",
                    "tag" : "0.0.3",
                    "commit" : "b5edf84517063aa5c6d132f01abf6ffa9a9e19b0"
                }
            ]
        }
    ]
}
